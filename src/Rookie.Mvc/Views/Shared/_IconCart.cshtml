<!-- Icon header -->
@inject IHttpContextAccessor HttpContextAccessor

@if (User.Identity.IsAuthenticated){
    var cartQuantity = HttpContextAccessor.HttpContext.Items["CartQuantity"] != null ? (int)HttpContextAccessor.HttpContext.Items["CartQuantity"] : 0;

  <a href="@Url.Action("Index", "Cart", new { area = "Customer" })">
    <div class="wrap-icon-header flex-w flex-r-m">
      <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" data-notify=@cartQuantity>
        <i class="zmdi zmdi-shopping-cart"></i>
      </div>
    </div>
  </a>
}
