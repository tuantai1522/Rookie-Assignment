@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container m-t-100">
    <div class="bg0 p-t-75 p-b-85">
        <div class="container">
            @using (Html.BeginForm("AddNewAddress", "Info", new { area = "Customer" }, FormMethod.Post))
            {
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address" name="Value" aria-describedby="address" placeholder="Enter Address">
                </div>
                <div class="form-group">
                    <label for="address">City</label>
                    <input type="text" class="form-control" id="city" name="City" aria-describedby="address" placeholder="Enter city">
                </div>
                <div class="form-group">
                    <label for="address">Country</label>
                    <input type="text" class="form-control" id="country" name="Country" aria-describedby="address" placeholder="Enter country">
                </div>
                <div class="form-group">
                    <label for="address">Zip Code</label>
                    <input type="text" class="form-control" id="zipCode" name="zipCode" aria-describedby="address" placeholder="Enter zip code">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            }
        </div>
    </div>
</div>