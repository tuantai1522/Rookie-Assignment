@model Rookie.Mvc.Areas.Identity.Models.Register.RegisterDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container m-t-50">
	<div class="limiter">
			<div class="container-login100">
					<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
							@using (Html.BeginForm("RegisterUser", "Register", new { area = "Identity" }, FormMethod.Post))
							{
									<div class="login100-form validate-form">
											<span class="login100-form-title p-b-49">
													Register
											</span>

											@if (ViewBag.ErrorMessage != null)
											{
													<span class="text-danger">@ViewBag.ErrorMessage</span>
											}

											@if (ViewBag.SuccessMessage != null)
            					{
													<span class="text-success">@ViewBag.SuccessMessage</span>
            					}

											<div asp-validation-summary="All" class="text-danger"></div>

											<div class="wrap-input100 validate-input m-b-23">
													<span asp-for="UserName" class="label-input100" >UserName</span>
													<input asp-for="UserName" class="input100" type="text" name="UserName" placeholder="Type your username" value="@Model?.UserName" >
													<span class="focus-input100" data-symbol="&#xf206;"></span>
													<span asp-validation-for="UserName" class="text-danger"></span>
											</div>

                    	<div class="wrap-input100 validate-input m-b-23">
													<span asp-for="FirstName" class="label-input100" >FirstName</span>
													<input asp-for="FirstName" class="input100" type="text" name="FirstName" placeholder="Type your firstName" value="@Model?.FirstName" >
													<span class="focus-input100" data-symbol="&#xf206;"></span>
													<span asp-validation-for="FirstName" class="text-danger"></span>
											</div>

                      <div class="wrap-input100 validate-input m-b-23">
													<span asp-for="LastName" class="label-input100" >LastName</span>
													<input asp-for="LastName" class="input100" type="text" name="LastName" placeholder="Type your lastName" value="@Model?.LastName" >
													<span class="focus-input100" data-symbol="&#xf206;"></span>
													<span asp-validation-for="LastName" class="text-danger"></span>
											</div>

                      <div class="wrap-input100 validate-input m-b-23">
													<span asp-for="Email" class="label-input100" >Email</span>
													<input asp-for="Email" class="input100" type="text" name="Email" placeholder="Type your Email" value="@Model?.Email" >
													<span class="focus-input100" data-symbol="&#xf206;"></span>
													<span asp-validation-for="Email" class="text-danger"></span>
											</div>

                      <div class="wrap-input100 validate-input m-b-23">
													<span asp-for="PassWord" class="label-input100" >PassWord</span>
													<input asp-for="PassWord" class="input100" type="password" name="PassWord" placeholder="Type your PassWord" value="@Model?.PassWord" >
													<span class="focus-input100" data-symbol="&#xf206;"></span>
													<span asp-validation-for="PassWord" class="text-danger"></span>
											</div>
											
											<div class="container-login100-form-btn">
													<div class="wrap-login100-form-btn">
															<div class="login100-form-bgbtn"></div>
															<button type="submit" class="login100-form-btn">
																	Register
															</button>
													</div>
											</div>

											<div class="flex-c-m">
													<a href="#" class="login100-social-item bg1">
															<i class="fa fa-facebook"></i>
													</a>

													<a href="#" class="login100-social-item bg2">
															<i class="fa fa-twitter"></i>
													</a>

													<a href="#" class="login100-social-item bg3">
															<i class="fa fa-google"></i>
													</a>
											</div>

									</div>
							}
					</div>
			</div>
	</div>

	<div id="dropDownSelect1">
    
  </div>
</div>

@section styles {
    <link rel="stylesheet" href="~/css/Login/main.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/Login/main.css" asp-append-version="true"/>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}