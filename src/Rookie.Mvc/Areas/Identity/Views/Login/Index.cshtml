@model Rookie.Mvc.Areas.Identity.Models.Login.LoginDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container m-t-50">
	<div class="limiter">
			<div class="container-login100">
					<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
							@using (Html.BeginForm("LoginUser", "Login", new { area = "Identity" }, FormMethod.Post))
							{
									<div class="login100-form validate-form">
											<span class="login100-form-title p-b-49">
													Login
											</span>

											@if (ViewBag.ErrorMessage != null)
											{
													<span class="text-danger">@ViewBag.ErrorMessage</span>
											}

											<div asp-validation-summary="All" class="text-danger"></div>

											<div class="wrap-input100 validate-input m-b-23">
													<span asp-for="UserName" class="label-input100" >UserName</span>
													<input asp-for="UserName" class="input100" type="text" name="UserName" placeholder="Type your username" value="@Model?.UserName" >
													<span class="focus-input100" data-symbol="&#xf206;"></span>
													<span asp-validation-for="UserName" class="text-danger"></span>
											</div>

											<div class="wrap-input100 validate-input">
													<span asp-for="PassWord" class="label-input100" >PassWord</span>
													<input asp-for="PassWord" class="input100" type="password" name="PassWord" placeholder="Type your password" value="@Model?.PassWord" >
													<span class="focus-input100" data-symbol="&#xf190;"></span>
													<span asp-validation-for="PassWord" class="text-danger"></span>
											</div>
											
											<div class="text-right p-t-8 p-b-31">
													<a href="#">
															Forgot password?
													</a>
											</div>
											
											<div class="container-login100-form-btn">
													<div class="wrap-login100-form-btn">
															<div class="login100-form-bgbtn"></div>
															<button type="submit" class="login100-form-btn">
																	Login
															</button>
													</div>
											</div>

											<div class="txt1 text-center p-t-54 p-b-20">
													<span>
															Or Sign Up Using
													</span>
											</div>

											<div class="flex-c-m">
													<a href="#" class="login100-social-item bg1">
															<i class="fa fa-facebook"></i>
													</a>

													<a href="#" class="login100-social-item bg2">
															<i class="fa fa-twitter"></i>
													</a>

													<a href="#" class="login100-social-item bg3">
															<i class="fa fa-google"></i>
													</a>
											</div>

											<div class="flex-col-c p-t-155">
													<span class="txt1 p-b-17">
															Or Sign Up Using
													</span>

													<a href="#" class="txt2">
															Sign Up
													</a>
											</div>
									</div>
							}
					</div>
			</div>
	</div>

	<div id="dropDownSelect1">
    
  </div>
</div>

@section styles {
    <link rel="stylesheet" href="~/css/Login/main.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/Login/main.css" asp-append-version="true"/>
}